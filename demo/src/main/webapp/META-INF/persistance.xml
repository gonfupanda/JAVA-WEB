<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="com.ipartek.formacion.spring.pojos">

        <!-- Entity classes -->
        <class>com.ipartek.formacion.spring.pojos.Persona</class>
        <class>com.ipartek.formacion.spring.pojos.Categoria</class>
        <class>com.ipartek.formacion.spring.pojos.Cliente</class>
        <class>com.ipartek.formacion.spring.pojos.Empleado</class>
        <class>com.ipartek.formacion.spring.pojos.Factura</class>
        <class>com.ipartek.formacion.spring.pojos.Lista</class>
        <class>com.ipartek.formacion.spring.pojos.Pedido</class>
        <class>com.ipartek.formacion.spring.pojos.Producto</class>
        <class>com.ipartek.formacion.spring.pojos.Rol</class>
        <class>com.ipartek.formacion.spring.pojos.Usuario</class>
        <properties>
            <property name="show_sql" value="true"/>
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>